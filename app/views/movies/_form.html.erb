<div class="form-container">
  <%= form_with(model: movie) do |form| %>
    

    <div>
      <%= form.label :name, style: "display: block", class: 'form-label' %>
      <%= form.text_field :name, class: 'form-control' %>
    </div>
      
    <div>
      <%= form.label :text, style: "display: block", class: 'form-label' %>
      <%= form.text_field :text, class: 'form-control' %>
    </div>

    <div>
      <%= form.label :category, style: "display: block", class: 'form-label' %>
      <%= form.text_field :category, class: 'form-control' %>
    </div>

    <div>
      <%= form.submit 'Add new movie', class: 'btn btn-primary' %>
    </div>
  <% end %>
</div>